#include <iostream>
#include <chrono>
#include <string>

// Importing specific components (best practice)
using std::cout;
using std::cin;
using std::endl;
using std::string;

// Importing specific tools from the <chrono> library
using std::chrono::steady_clock;
using std::chrono::seconds;
using std::chrono::duration_cast;

int main() {
    string input;

    do {
        // Start the timer
        auto start = steady_clock::now();

        // Prompt the user to press enter 
        cout << "Press ENTER to stop the timer, or type 'q' to quit: ";
        
        // Use std::getline to read the entire line of input
        // This is better for checking empty input (just Enter)
        std::getline(cin, input); 

        // Check for quit command
        if (input == "q" || input == "Q") 
        {
            cout << "Program finished.\n";
            break;
        }
